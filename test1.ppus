thing MyThing <| {
    im_an_int : int,
    im_a_bool : bool
}

pipe main [] |> unit {
    mut MyThing t = MyThing {
      im_an_int: 1,
      im_a_bool: true
    };

    {
        /* immutably borrowing a thing member */
        &bool b = &t[im_a_bool];
    }

    {
        /* mutably borrowing a thing member */
        ~&bool b = ~&t[im_a_bool];
        /* updating the member */
        @b = false;

        Printnl <| [%@b];
    }

    |> ();
}